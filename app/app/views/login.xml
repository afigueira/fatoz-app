<Alloy>
	<Window class="container">
		<ImageView image="/images/logo-login.png" id="logo"/>
		
		<View id="form">
			<TextField id="email" hintText="L('email')" class="radius input fontGray" />
			<TextField id="password" passwordMask="true" hintText="L('password')" class="radius input fontGray" />
			<Button id="submit" class="radius" />
			<Label id="forgotPassword" textid="forgotpassword" class="fontWhite proximaNovaRegular"/>
		</View>
		
		<View id="btnFacebook" class="radius">
			<ImageView image="/images/logo-button-facebook.jpg" id="logoBtnFacebook"/>
			<Label textid="button_facebook_login" id="labelBtnFacebook" class="fontWhite proximaNovaRegular"/>
		</View>
		
		<View id="footer">
			<Button id="signup" titleid="button_signup" class="radius orange fontWhite"/>
		</View>
	</Window>
</Alloy>