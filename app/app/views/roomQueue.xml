        <View platform="android" role="centerWindow">			
        	<ImageView visible="false" id="trophy" image="/images/icon-queue-trophy.png" top="195" zIndex="100" />

			<View class="layoutVertical">
				<View class="topProfile layoutAbsolute" backgroundImage="http://pixabay.com/static/uploads/photo/2014/06/01/11/35/landscape-359541_640.jpg">				
					<View class="profile">
						<ImageView class="imageProfile" backgroundImage="http://i252.photobucket.com/albums/hh23/GSMFans_Brasil/Papeis_de_Parede/128x128/Paisagem/GSMFans_Paisagem-009.jpg" />
						<Label class="proximaNovaRegular fontWhite profileTitle" id="profileTitleA" />								
					</View>				
				</View>
				
				<View id="searchPlayer" class="layoutVertical searchPlayer">
					<ImageView image="/images/img-queue.png" class="star" />
