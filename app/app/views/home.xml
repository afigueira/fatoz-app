<Alloy>
    <Widget id="drawer" src="nl.fokkezb.drawer">
        <Window module="xp.ui" role="leftWindow" id="sidebar"></Window>

        <View platform="android" role="centerWindow">			
			<View class="inside layoutVertical">				
				<View class="layoutAbsolute heightUiSize" width="280" id="goToCategories">
					<View class="layoutVertical heightUiSize" height="Titanium.UI.SIZE">																
						<View id="containerLabelHighlight">
							<ImageView image="/images/icon-highlights.png" />
							<Label textid="highlights" class="fontWhite proximaNovaRegular" id="labelHighlight"/>
						</View>
						
						<Label textid="see_categories" class="fontWhite proximaNovaRegular" id="labelSeeCategories"/>								
					</View>						
					
					<ImageView image="/images/arrow-see-more-categories-home.png" id="arrowSeeCategories"/>														
				</View>
									
				<View id="categories" class="radius layoutVertical">
					<View id="tabs">
						<View class="tab" id="popularTab" onClick="tabNavigation" contentTabsIndex="0">
							<Label textid="popular" class="fontOrange proximaNovaRegular labelTab" />
							<View class="tabSelected orange" />
						</View>
						<View class="tab" id="recentTab" onClick="tabNavigation" contentTabsIndex="1">
							<Label textid="text_new" class="fontOrange proximaNovaRegular labelTab"/>
							<View class="tabSelected orange" />
						</View>
						<View class="tab">
							<Label textid="recent" class="fontOrange proximaNovaRegular labelTab"/>
							<View class="tabSelected orange" />
						</View>
					</View>
					
					<View id="contentTabs">
						<ScrollableView id="popular" class="scrollable">							
							<View class="category soccer">
								<ImageView image="/images/icon-home-category-football.png" class="iconCategory"/>
								<Label class="fontWhite proximaNovaRegular titleCategory" id="titleCategory" />
								<Label class="fontWhite proximaNovaRegular descriptionCategory" id="descriptionCategory" />
								
								<Button titleid="new_match" class="radiusLarge green fontWhite proximaNovaRegular btnNewMatch" />
								<Button titleid="challenge" class="btnWhite btnChallenge" />
								<Button titleid="ranking" class="btnWhite btnRanking" />	
							</View>
						</ScrollableView>
						
						<ScrollableView id="recent" class="scrollable">							
							<View class="category soccer">
								<ImageView image="/images/icon-home-category-football.png" class="iconCategory"/>
								<Label class="fontWhite proximaNovaRegular titleCategory" id="titleCategory" />
								<Label class="fontWhite proximaNovaRegular descriptionCategory" id="descriptionCategory" />
								
								<Button titleid="new_match" class="radiusLarge green fontWhite proximaNovaRegular btnNewMatch" />
								<Button titleid="challenge" class="btnWhite btnChallenge" />
								<Button titleid="ranking" class="btnWhite btnRanking" />	
							</View>
						</ScrollableView>	
					</View>					
				</View>
				
				<View class="margin"/>				
			</View>
    	</View>
    </Widget>
</Alloy>