<Alloy>
    <Widget id="drawer" src="nl.fokkezb.drawer">
        <Window module="xp.ui" role="leftWindow" id="sidebar"></Window>

        <Window module="xp.ui" role="centerWindow" title="Início">
        	
        	<View id="titleBar" platform="ios">
        		<Label text="Início" class="fontWhite proximaNovaRegular" id="labelTitleBar"/>
    		</View>
        	
			<ScrollView class="inside">		
				<View class="layoutVertical">
					<View class="layoutAbsolute heightUiSize" width="280" id="goToCategories">
						<View class="layoutVertical heightUiSize" height="Titanium.UI.SIZE">																
							<View id="containerLabelHighlight">
								<ImageView image="/images/icon-highlights.png" />
								<Label textid="highlights" class="fontWhite proximaNovaRegular" id="labelHighlight"/>
							</View>
							
							<Label textid="see_categories" class="fontWhite proximaNovaRegular" id="labelSeeCategories"/>								
						</View>						
						
						<ImageView image="/images/arrow-see-more-categories-home.png" id="arrowSeeCategories"/>														
					</View>
										
					<View id="categories" class="radius layoutAbsolute">	

						<View id="tabs">
							<View class="tab" id="popularTab" onClick="tabNavigation" contentTabsIndex="0" width="50%">
								<Label textid="popular" class="fontOrange proximaNovaRegular labelTab" />
								<View class="tabSelected orange" />
							</View>
							<View class="tab" id="recentTab" onClick="tabNavigation" contentTabsIndex="1" width="50%">
								<Label textid="text_new" class="fontOrange proximaNovaRegular labelTab"/>
								<View class="tabSelected orange" />
							</View>							
						</View>
						
						<View id="contentTabs" top="46">
							<ScrollableView id="popular" class="scrollable">
							</ScrollableView>
							
							<ScrollableView id="recent" class="scrollable">
							</ScrollableView>	
						</View>
						
					</View>
					
					<!--<View class="margin"/>-->
				</View>
			</ScrollView>
    	</Window>
    </Widget>
</Alloy>