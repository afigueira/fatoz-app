					<Label class="proximaNovaRegular fontWhite profileTitle" textid="user_name"/>
					<Label class="proximaNovaRegular fontWhite profileCityState" textid="city_state"/>			
				</View>
				
				<View class="profileButtons">
					<Button class="fontWhite proximaNovaRegular btnFollow" titleid="btn_follow" />
					<Button class="borderWhite fontWhite proximaNovaRegular btnMore" />
				</View>						
			</View>
			
			<View id="containerTabs" class="white">
				<View id="tabs">
					<View class="tab">
						<Label textid="statistics" class="fontOrange proximaNovaRegular labelTab"/>
						<View class="tabSelected orange" />								
					</View>
					<View class="tab">
						<Label textid="friends" class="fontOrange proximaNovaRegular labelTab"/>
						<View class="tabSelected orange" visible="false" />
					</View>
					<View class="tab">
						<Label textid="rank" class="fontOrange proximaNovaRegular labelTab"/>
						<View class="tabSelected orange" visible="false" />
					</View>
					<View class="tab">
						<Label textid="conquer" class="fontOrange proximaNovaRegular labelTab"/>
						<View class="tabSelected orange" visible="false" />
					</View>
				</View>
			</View>
			
			<ScrollableView>
				<View class="profileStatistics">
					<View class="graphic1"><Label text="Grafico 1"/></View>
					
