										<Label class="resultsSub" textid="abbreviation_points"/>
									</View> 
									<Label class="resultsTitle" textid="average_score"/>
								</View>
							</View>
						</View>
						
						<View class="resultsRow">
							<View class="resultsCell">
								<View class="resultsMarginTop">
									<View class="withSub">
										<Label class="resultsNumber" text="0,8"/>
										<Label class="resultsSub" textid="abbreviation_monday"/>
									</View>
									<Label class="resultsTitle" textid="average_response_time"/>
								</View>
							</View>
							
							<View class="resultsCell">
								<View class="resultsMarginTop">
									<View class="withSub">
										<View class="withSub">
