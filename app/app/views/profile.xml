									</View>
									<Label class="resultsTitle" textid="total_play_time"/>
								</View>
							</View>
						</View>
					</View>		            
				</View>
				
				<View class="profileFriends">
					<View id="containerSearch" class="black">
						<TextField id="search" class="white fontGray radiusLarge proximaNovaRegular" hintText="Pesquisar" />
					</View>
					
					<TableView id="friends">
						<TableViewRow>
							<ImageView class="imageProfile imageProfileFriends" backgroundImage="http://i252.photobucket.com/albums/hh23/GSMFans_Brasil/Papeis_de_Parede/128x128/Paisagem/GSMFans_Paisagem-009.jpg" />
							<Label class="friendName" text="Rafael Costa"/>						
					    </TableViewRow>
					    <TableViewRow>
							<ImageView class="imageProfile imageProfileFriends" backgroundImage="http://i252.photobucket.com/albums/hh23/GSMFans_Brasil/Papeis_de_Parede/128x128/Paisagem/GSMFans_Paisagem-009.jpg" />
